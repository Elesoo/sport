        {% block timer %}
            <script>
                $(document).ready(function(){


                    $('i').on('click', function(){
                        if($(this).parent().attr('aria-expanded') == 'true'){
                            $(this).removeClass('up');
                            $(this).addClass('down');
                        } else {
                            $(this).removeClass('down');
                            $(this).addClass('up');
                        }
                    });

                    var tmp = document.location.pathname.split('/')[1];

                    switch(tmp){

                        case 'football' : 
                            $('.header__enter').css("background", "#119C51");
                            $('.modal__body_btn').css('background','#119C51');
                            $('.modal__body_title').css('color','#119C51');
                            $('.header__reg').css('border-color','#119C51');
                            break;

                        case 'basketball' : 
                            $('.header__enter').css('background','#FF5F23');
                            $('.modal__body_btn').css('background','#FF5F23');
                            $('.modal__body_title').css('color','#FF5F23');
                            $('.header__reg').css('border-color','#FF5F23');
                            break;

                        case 'hockey' : 
                            $('.header__enter').css("background", "#1779C0");
                            $('.modal__body_btn').css('background','#1779C0');
                            $('.modal__body_title').css('color','#1779C0');
                            $('.header__reg').css('border-color','#1779C0');
                            break;

                        default : 
                            $('.header__enter').css("background", "#119C51");
                            $('.modal__body_btn').css('background','#119C51');
                            $('.modal__body_title').css('color','#119C51');
                            $('.header__reg').css('border-color','#119C51');
                    }
                });

                let timerId = setTimeout(function tick() {
                    var date = new Date();
                    var options = {
                      timezone: 'UTC',
                      hour: 'numeric',
                      minute: 'numeric'
                    };

                    $('.header__time').html(date.toLocaleString("ru", options));
                    timerId = setTimeout(tick, 500);
                }, 500);

            </script>
